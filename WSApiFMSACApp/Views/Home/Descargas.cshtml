@model Entidades.Comercial.Transaccion

@{
    ViewBag.Title = "Descargas";
}

<h2>Descargas</h2>

@using (Html.BeginForm("ConsultarDocumento", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
   
        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <img src="~/Content/Img/Logo.png" width="20%" height="20%"/>
                  </div>
                </div>

            <h4>CONSULTA DE DOCUMENTOS ELECTRONICOS</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label for="Username">RUC Emisor:</label>
                </div>
                <div class="col-md-offset-2 col-md-10">
                     <input type="number" name="ruc" required/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label for="Username">Serie:</label>
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="text" name="serie"  required/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label for="Username">Numero:</label>
                 </div>
                 <div class="col-md-offset-2 col-md-10">
                        <input type="number" name="numero"  required/>
                 </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input name="accion" type ="submit" value="Descargar PDF" class="btn btn-default" />
                    <input name="accion" type="submit" value="Descargar XML" class="btn btn-default" />
                </div>
            </div>
        </div>
        

        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
